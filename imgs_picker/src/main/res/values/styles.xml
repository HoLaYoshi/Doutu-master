<resources>

    <!--
      Base application theme, dependent on API level. This theme is replaced
      by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseThemes" parent="Theme.AppCompat.Light.NoActionBar">
        <!--5.0+主题上才有效-->
        <item name="colorPrimary">@color/imagesGrid_title_color</item> <!-- 导航栏颜色-->
        <item name="colorPrimaryDark">@color/imagesGrid_title_color</item><!-- 状态栏颜色-->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!--  这个是加入的代码 -->
    <style name="popupwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/show_from_bottom</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/hide2bottom</item>
        <!-- 指定消失的动画xml -->
    </style>
    <!--标准分割线样式-->
    <style name="spitLines">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2px</item>
        <item name="android:background">@color/spitLines</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



</resources>