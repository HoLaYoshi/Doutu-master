<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_content"
    android:gravity="center"
    android:padding="10dp">

    <ImageView
        android:id="@+id/share_img"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:scaleType="fitXY"
        android:src="@drawable/icons"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:gravity="center"
        android:orientation="vertical">
         <TextView
             android:id="@+id/share_name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginBottom="10dp"
             android:maxLines="1"
             android:textSize="13sp"
             android:text="标题:"/>


        <LinearLayout
            android:id="@+id/sdkShare_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/qq"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/background_tabs"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/share_qq"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/txt_12sp"
                    android:text="QQ好友"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/qqZone"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/background_tabs"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/share_qqzone"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/txt_12sp"
                    android:text="QQ空间"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/wechat"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/background_tabs"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/share_wechat"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/txt_12sp"
                    android:text="微信"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/wechatFriends"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/background_tabs"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/share_wechat_friends"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/txt_12sp"
                    android:text="朋友圈"/>
            </LinearLayout>
        </LinearLayout>


        <Button
            android:id="@+id/share_send"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:text="发送至其它"
            android:visibility="visible"
            android:textColor="@color/black_grey"
            android:background="@drawable/subscribe_item_bg"/>
        <Button
            android:id="@+id/share_update"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="7dp"
            android:visibility="gone"
            android:text="改字"
            android:textColor="@color/black_grey"
            android:background="@drawable/subscribe_item_bg"/>

        <Button
            android:id="@+id/share_save"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="7dp"
            android:text="收藏"
            android:textColor="@color/black_grey"
            android:background="@drawable/subscribe_item_bg"/>


    </LinearLayout>
</LinearLayout>